<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.renrenstep.StepSettingActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_marginTop="22dp"
        android:text="输入信息" />
    
    <EditText
        android:id="@+id/et_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:hint="输入步数"
        android:layout_marginTop="14dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/et_fast_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_step"
        android:layout_centerHorizontal="true"
        android:hint="快走步数"
        android:layout_marginTop="16dp"
        android:ems="10" />

    <EditText
        android:id="@+id/et_juli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_fast_step"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:hint="行走距离"
        android:ems="10" />

    <EditText
        android:id="@+id/et_cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_juli"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:hint="消耗卡路里"
        android:ems="10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_cal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:onClick="next"
        android:text="确定" />

</RelativeLayout>
