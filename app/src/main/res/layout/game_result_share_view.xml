<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@drawable/bg_01" >

        <RelativeLayout
            android:id="@+id/share_header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp" >

            <view.CircleImageView
                android:id="@+id/img_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:focusable="false"
                android:src="@drawable/regist_man" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/img_avatar"
                android:text="小明向你分享"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_10dp"
                android:src="@drawable/launger" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/share_rank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/share_header"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/txt_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="18sp" >
            </TextView>

            <TextView
                android:id="@+id/txt_rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_team"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="18sp" >
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_share_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/share_rank"
            android:layout_centerInParent="true" >

            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:src="@drawable/share_center_bg" />

            <TextView
                android:id="@+id/txt_rankdata_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="112dp"
                android:gravity="center_horizontal"
                android:shadowColor="#dd3d05"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/txt_share_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_rankdata_title"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
            	android:shadowColor="#dd3d05"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:text=""
                android:textColor="@color/white"
                 android:textStyle="bold"
                android:textSize="16sp" >
            </TextView>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/woerweima" >
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长按二维码,选择“识别图中二维码”"
            android:textColor="@color/share_title"
            android:textSize="12sp" >
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="即可下载“走酷”APP，加入走酷，全民健身"
            android:textColor="@color/share_title"
            android:textSize="12sp" >
        </TextView>
    </LinearLayout>

</LinearLayout>