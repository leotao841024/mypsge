<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_10dp" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:layout_marginRight="@dimen/padding_10dp"
                android:src="@drawable/icon_notify_woman" />
            <TextView
        	    android:id="@+id/txt_noreadnotify"
        	    android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="12"
            	android:layout_toLeftOf="@+id/linear_share"
            	android:background="@drawable/remind_icon_noread"
            	android:gravity="center"
            	android:textColor="@color/notify_noread_color"  
            	android:textSize="12sp" 
            	android:layout_marginLeft="-20dp" >
            </TextView>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/weather" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="@dimen/titlesize"
            android:layout_height="@dimen/titlesize"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_marginRight="@dimen/padding_10dp"
            android:src="@drawable/icon_mine_next" />
    </LinearLayout>

</LinearLayout>