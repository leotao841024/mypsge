<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal" >

            <view.CircleImageView
                android:id="@+id/iv_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/regist_man" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/nm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textColor="@color/talk_nm_color" >
            </TextView>

            <TextView
                android:id="@+id/resume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="这是一个介绍"
                android:textColor="@color/weather"
                >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/laytimer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_accept"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_friend_red"
                android:text="@string/acceptnm"
                android:textColor="@color/white"
                android:textSize="14sp" >
            </Button>
            <TextView android:id="@+id/hasagree" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/hasadd"
                android:visibility="gone">
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>